<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/px_31">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="@dimen/px_490"
        android:layout_height="@dimen/px_80"
        android:background="@mipmap/input">

        <RelativeLayout
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_76">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/px_5"
                android:text="@string/all_day"
                android:textColor="@color/white"
                android:textSize="@dimen/px_9"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/et_content"
            android:layout_width="@dimen/px_490"
            android:layout_height="@dimen/px_80"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/please_input_num"
            android:maxLength="3"
            android:paddingLeft="@dimen/px_20"
            android:textColor="@android:color/black"
            android:textSize="@dimen/px_30" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_31"
        android:overScrollMode="never" />
</LinearLayout>