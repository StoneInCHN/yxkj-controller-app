<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingBottom="13px"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:paddingTop="13px">

    <ImageView
        android:id="@+id/img_name"
        android:layout_width="33px"
        android:layout_height="63px"
        android:src="@color/colorAccent" />

    <LinearLayout
        android:layout_width="155px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A21"
            android:textColor="@color/color_333333"
            android:textSize="20px" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:gravity="center_vertical"
            android:text="同意冰红茶"
            android:textColor="@color/color_333333"
            android:textSize="24px" />
    </LinearLayout>


    <com.yxkj.controller.view.NumberAddSubView
        android:id="@+id/selcct_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:btnAddBackground="@drawable/bg_btn_style_white"
        app:btnAddTextColor="@color/green"
        app:btnTextSize="@dimen/px_24"
        app:maxValue="100"
        app:minValue="0"
        app:textViewPadding="10px"
        app:textViewSize="24px"
        app:value="1" />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:gravity="center"
        android:text="￥10.00"
        android:textColor="@color/orange"
        android:textSize="26px" />
</LinearLayout>