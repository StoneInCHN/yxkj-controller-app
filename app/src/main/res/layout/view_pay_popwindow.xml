<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFF5F4F4">

    <RelativeLayout
        android:id="@+id/layout_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/goodList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/goodList"
            android:layout_marginRight="50px"
            android:text="总计:￥25.80"
            android:textColor="@color/orange"
            android:textSize="30px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000">

            <ImageView
                android:id="@+id/img_pay_code"
                android:layout_width="238px"
                android:layout_height="238px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="227px"
                android:scaleType="fitXY"
                android:src="@mipmap/banner_right" />

            <TextView
                android:id="@+id/tv_counter_down"
                android:layout_width="386px"
                android:layout_height="50px"
                android:layout_below="@id/img_pay_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="52px"
                android:background="@drawable/btn_cancle_pay"
                android:gravity="center"
                android:text="取消支付120s"
                android:textColor="@color/white"
                android:textSize="28px" />


            <com.yxkj.controller.view.CanclePayView
                android:id="@+id/cancle_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="280px"
                android:layout_marginTop="330px"
                android:visibility="gone" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="155px"
            android:layout_height="108px"
            android:layout_marginTop="300px"
            android:src="@mipmap/icon_pay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:text="支付成功，请及时取走商品"
            android:textColor="@color/color_333333"
            android:textSize="30px" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="420px"
            android:layout_height="50px"
            android:layout_marginTop="25px"
            android:background="@drawable/btn_cancle_pay"
            android:text="返回首页:5s"
            android:textColor="@color/white"
            android:textSize="30px" />
    </LinearLayout>
</RelativeLayout>