<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/vertical_line_color" />

    <LinearLayout
        android:id="@+id/layout_clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:background="@drawable/layout_bg"
        android:gravity="center_vertical"
        android:visibility="visible">
        <!--价格总览与清空列表-->
        <LinearLayout
            android:layout_width="@dimen/px_300"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/tv_clear"
                android:layout_width="@dimen/px_66"
                android:layout_height="60px"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/px_16"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:paddingTop="@dimen/px_16"
                android:src="@mipmap/icon_clear" />

            <View
                android:layout_width="@dimen/px_1"
                android:layout_height="match_parent"
                android:background="@color/vertical_line_color" />

            <LinearLayout
                android:layout_width="@dimen/px_245"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/total_all"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px_24" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_18"
                    android:gravity="center"
                    android:text="@string/total_price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px_28" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay_immediate"
            android:layout_width="@dimen/px_230"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:gravity="center"
            android:text="@string/immediate_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/px_28"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_totall_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/px_25"
        android:text="@string/total_all_price"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/px_24"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>