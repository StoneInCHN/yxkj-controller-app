<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.yxkj.controller.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_main"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:clickable="true"
            android:src="@mipmap/back_main" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/theme_green"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/theme_green" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.yxkj.controller.view.VerticalViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher_round"
            android:visibility="gone" />
    </RelativeLayout>

    <!--支付信息模块-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.yxkj.controller.view.SelectedGoodsList
            android:id="@+id/seletedGoodsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_black_90trans"
            android:paddingLeft="14dp">

            <RelativeLayout
                android:id="@+id/rl_selected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/cart_logo" />

                <TextView
                    android:id="@+id/tv_selected"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/bg_tv_round_red"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="6dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="共计: ￥25.80"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="122dp"
                android:layout_height="27dp"
                android:background="@color/theme_orange"
                android:gravity="center"
                android:text="去支付"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <com.yxkj.controller.view.TitleView
        android:id="@+id/titleBotomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>