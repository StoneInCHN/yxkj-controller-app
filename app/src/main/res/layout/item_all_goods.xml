<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/px_16"
    android:layout_marginTop="@dimen/px_16"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px_160"
        android:layout_height="@dimen/px_225"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_11"
        android:paddingRight="@dimen/px_11">


        <!--<LinearLayout-->
        <!--android:layout_width="@dimen/px_137"-->
        <!--android:layout_height="@dimen/px_137"-->
        <!--android:gravity="center">-->

        <ImageView
            android:id="@+id/img_name"
            android:layout_width="@dimen/px_137"
            android:layout_height="@dimen/px_137"
            android:scaleType="fitCenter"
            android:src="@mipmap/test" />
        <!--</LinearLayout>-->

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_15"
            android:ellipsize="end"
            android:lines="1"
            android:text="农夫山泉有点甜天天天天天"
            android:textSize="@dimen/px_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_16"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/price"
                    android:textColor="@color/theme_orange"
                    android:textSize="@dimen/px_14" />


                <TextView
                    android:id="@+id/tv_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/price"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/px_12" />

            </LinearLayout>

            <com.yxkj.controller.view.NumberAddSubView
                android:id="@+id/select_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:btnSize="@dimen/px_24"
                app:btnTextSize="@dimen/px_14"
                app:maxValue="100"
                app:minValue="0"
                app:textViewPadding="@dimen/px_5"
                app:textViewSize="@dimen/px_14"
                app:value="1" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/px_47"
        android:layout_height="@dimen/px_16"
        android:layout_gravity="center_horizontal"
        android:background="@color/green"
        android:gravity="center"
        android:text="冰冻"
        android:textColor="@color/white"
        android:textSize="@dimen/px_12" />

    <TextView
        android:id="@+id/tv_lack"
        android:layout_width="@dimen/px_160"
        android:layout_height="@dimen/px_225"
        android:layout_gravity="center"
        android:background="@color/color_50000000"
        android:gravity="center"
        android:text="@string/queshao"
        android:textColor="@color/white"
        android:textSize="@dimen/px_30"
        android:textStyle="bold"
        android:visibility="gone" />
</FrameLayout>